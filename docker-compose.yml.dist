version: "2"

services:
  #------------------------------------------------------------------
  # Volumes
  #------------------------------------------------------------------

  volume_media:
    image: tianon/true
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
    volumes:
      - ${FRIDAY_LOCATION_TORRENT_DOWNLOADS}:/downloads
      - ${FRIDAY_LOCATION_TORRENT_WATCH}:/watch
      - ${FRIDAY_LOCATION_TVSHOWS}:/tv
      - ${FRIDAY_LOCATION_MOVIES}:/movies
      - ${FRIDAY_LOCATION_MUSIC}:/music
      - ${FRIDAY_LOCATION_ANIME}:/anime
      - ${FRIDAY_ROOT}/config:/config
      - /etc/localtime:/etc/localtime:ro

  #------------------------------------------------------------------
  # Services
  #------------------------------------------------------------------

  heimdall:
    image: linuxserver/heimdall
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_HEIMDALL_HOSTNAME}
    ports:
      - 9876:80
    expose:
      - 9876
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/heimdall:/config
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_HEIMDALL_HOSTNAME}

  transmission:
    image: linuxserver/transmission
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_TRANSMISSION_HOSTNAME}
    ports:
      - 9091:9091
      - 51413:51413
      - 51413:51413/udp
    expose:
      - 9091
      - 51413
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/transmission:/config
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_TRANSMISSION_HOSTNAME}

  couchpotato:
    image: linuxserver/couchpotato
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_COUCHPOTATO_HOSTNAME}
    ports:
      - 5050:5050
    expose:
      - 5050
    links:
      - transmission
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/couchpotato:/config
    volumes_from:
      - volume_media
    depends_on:
      - transmission
      # - jackett
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_COUCHPOTATO_HOSTNAME}

  # sickchill:
