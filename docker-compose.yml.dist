  sonarr:
    image: linuxserver/sonarr
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_SONARR_HOSTNAME}
    ports:
      - 8989:8989
    expose:
      - 8989
    links:
      - transmission
      - jackett
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/sonarr:/config
    volumes_from:
      - volume_media
    depends_on:
      - transmission
      - jackett
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_SONARR_HOSTNAME}
          
  radarr:
    image: linuxserver/radarr
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_RADARR_HOSTNAME}
    ports:
      - 7878:7878
    expose:
      - 7878
    links:
      - transmission
      - jackett
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/radarr:/config
    volumes_from:
      - volume_media
    depends_on:
      - transmission
      - jackett
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_RADARR_HOSTNAME}

  emby:
    image: emby/embyserver
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_EMBY_HOSTNAME}
    ports:
      - 8096:8096
      - 8920:8920
    expose:
      - 8096
      - 8920
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
      GIDLIST: 985
    volumes:
      - ${FRIDAY_ROOT}/config/emby:/config
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_EMBY_HOSTNAME}

  ombi:
    image: linuxserver/ombi
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_OMBI_HOSTNAME}
    ports:
      - 3579:3579
    expose:
      - 3579
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/ombi:/config
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_OMBI_HOSTNAME}

  lidarr:
    image: linuxserver/lidarr
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_LIDARR_HOSTNAME}
    ports:
      - 8686:8686
    expose:
      - 8686
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
    volumes:
      - ${FRIDAY_ROOT}/config/lidarr:/config
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_LIDARR_HOSTNAME}

  nzbget:
    image: linuxserver/nzbget
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_NZBGET_HOSTNAME}
    ports:
      - 6789:6789
    expose:
      - 6789
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/nzbget:/config
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_NZBGET_HOSTNAME}

  hydra:
    image: linuxserver/hydra2
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_HYDRA_HOSTNAME}
    ports:
      - 5076:5076
    expose:
      - 5076
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/hydra:/config
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_HYDRA_HOSTNAME}

  jackett:
    image: linuxserver/jackett
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_JACKETT_HOSTNAME}
    ports:
      - 9117:9117
    expose:
      - 9117
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
    volumes:
      - ${FRIDAY_ROOT}/config/jackett:/config
      - ${FRIDAY_LOCATION_TORRENT_WATCH}:/downloads
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_JACKETT_HOSTNAME}

  flaresolverr:
    image: flaresolverr/flaresolverr
    restart: unless-stopped
    hostname: ${FRIDAY_NETWORK_FLARESOLVERR_HOSTNAME}
    ports:
      - 8191:8191
    expose:
      - 8191
    environment:
      PGID: ${FRIDAY_CONFIG_PGID}
      PUID: ${FRIDAY_CONFIG_PUID}
      TZ: ${FRIDAY_TIMEZONE}
      LOG_LEVEL: info
      CAPTCHA_SOLVER: hcaptcha-solver
    volumes:
      - ${FRIDAY_ROOT}/config/flaresolverr:/config
      - ${FRIDAY_LOCATION_TORRENT_WATCH}:/downloads
    volumes_from:
      - volume_media
    networks:
      friday:
        aliases:
          - ${FRIDAY_NETWORK_FLARESOLVERR_HOSTNAME}

